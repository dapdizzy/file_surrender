<h2>Your Secret value</h2>
<strong>Secret:</strong>
<%= display_secret(@secret) %>

<span><%= link "Main page", to: page_path(@conn, :index), class: "btn btn-link" %></span>
<br>
<%= unless has_secret?(@secret) do %>
<span><%= link "Create Secret", to: secret_path(@conn, :new) %></span>
<% end %>
<%= if has_secret?(@secret) do %>
<%= unless verified?(@secret) do %>
<span><%= link "Verify Secret", to: secret_path(@conn, :verify_prompt) %></span>
<% end %>
<span><%= link "Change Secret", to: secret_path(@conn, :edit) %></span>
<span><%= link "Delete Secret", to: secret_path(@conn, :delete), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %></span>
<% end %>
<br>
<span><%= link "Secret Entries", to: entry_path(@conn, :index) %></span>
